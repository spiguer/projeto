<% layout('../layouts/boileradmin')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Adicionar Cursos</h5>
                    <form action="/cursos" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="name">Nome do Curso</label>
                            <input class="form-control" type="text" id="name" name="name" required autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="vagaset">Vagas ET</label>
                            <input class="form-control" type="number" id="vagaset" name="vagaset" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="vagasoc">Vagas OC</label>
                            <input class="form-control" type="number" id="vagasoc" name="vagasoc" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="vagastsp">Vagas TSP</label>
                            <input class="form-control" type="number" id="vagastsp" name="vagastsp" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="vagasvt">Vagas VT</label>
                            <input class="form-control" type="number" id="vagasvt" name="vagasvt" required>
                        </div>
                        <button class="btn btn-success btn-block">Adicionar</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

