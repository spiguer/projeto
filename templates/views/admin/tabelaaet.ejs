<% layout('../layouts/boileradmin')%>

<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-8 offset-xl-4">
            <div class="card shadow">
                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                    alt="" class="card-img-top" />
                    
                <div class="card-body">
                    <h5 class="card-title">Titulares de diploma de especialização texnológica</h5>
                    <form action="/alunoset" method="GET" class="validated-form" novalidate></form>
                        <div>
                            <table class="table">
                                <tr>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Contacto</th>
                                    <th>Data de Nascimento</th>
                                    <th>Diploma</th>
                                    <th>Nota</th>
                                    <th>Curso</th>
                                </tr>
                                <% for(var i=0; i<alunosets.length; i++) {%>
                                    <tr>
                                        <td><%= alunosets[i].name %></td>
                                        <td><%= alunosets[i].email %></td>
                                        <td><%= alunosets[i].contacto %></td>
                                        <td><%= alunosets[i].dateOfBirth %></td>
                                        <td><%= alunosets[i].diploma %></td>
                                        <td><%= alunosets[i].nota %></td>
                                        <td><%= alunosets[i].curso %></td>
                                    </tr>
                                <% } %>
                            </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>